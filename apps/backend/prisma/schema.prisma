generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. THE USER (Doctors, Patients, Staff)
model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  name        String
  phone       String?
  role        Role     @default(PROVIDER)

  // --- NEW VERIFICATION FIELDS ---
  phoneVerified    Boolean @default(false) // For OTP Status
  aadhaarVerified  Boolean @default(false) // For DigiLocker Status
  livePhotoUrl     String?                 // The "Selfie" URL
  // -------------------------------

  createdAt DateTime @default(now())

  // Relations...
  clinicId       String?
  clinic         Clinic?        @relation("ClinicToUser", fields: [clinicId], references: [id])
  doctorProfile  DoctorProfile?
  appointments   Appointment[]
}

// 2. THE CLINIC
model Clinic {
  id          String   @id @default(uuid())
  name        String
  address     String
  city        String   @default("Dehradun")
  image       String
  rating      Float    @default(4.5)
  description String?
  verified    Boolean  @default(false)

  // --- NEW DOCS ---
  addressProofUrl String? // Utility bill or Registration deed
  // ----------------

  createdAt   DateTime @default(now())

  // Relations...
  users       User[]   @relation("ClinicToUser")
  doctors     DoctorProfile[]
  patients    Patient[]
}

// 3. THE PATIENT (Queue Items - Walk-ins)
model Patient {
  id            String      @id @default(uuid())
  token         Int
  name          String
  phone         String?
  type          VisitType   @default(CHECKUP)
  status        QueueStatus @default(WAITING)

  arrivalTime   DateTime    @default(now())
  servedTime    DateTime?
  completedTime DateTime?

  clinicId      String
  clinic        Clinic      @relation(fields: [clinicId], references: [id])
}

// 4. THE APPOINTMENT (Booked Online)
model Appointment {
  id          String   @id @default(uuid())
  date        String
  time        String
  status      String   @default("CONFIRMED")
  patientName String

  doctorId    String?
  doctor      DoctorProfile? @relation(fields: [doctorId], references: [id])

  userId      String?
  user        User?    @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
}

// 5. DOCTOR PROFILE (Details for the Doctor)
model DoctorProfile {
  id          String   @id @default(uuid())
  name        String
  specialty   String
  experience  Int
  image       String
  rating      Float    @default(4.8)
  price       Int
  about       String?

  // --- NEW LICENSE FIELDS ---
  licenseNumber    String?  // e.g. "MCI-12345"
  registrationYear Int?     // e.g. 2018
  licenseCertUrl   String?  // URL to the uploaded file
  degreeCertUrl    String?  // URL to the degree
  // --------------------------

  clinicId    String
  clinic      Clinic   @relation(fields: [clinicId], references: [id])

  userId      String?  @unique
  user        User?    @relation(fields: [userId], references: [id])

  appointments Appointment[]
}

// 6. INSTANT QUEUE (USP Feature)
model CustomSession {
  id          String   @id @default(uuid())
  hostName    String
  title       String
  joinCode    String   @unique
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  participants SessionParticipant[]
}

model SessionParticipant {
  id        String   @id @default(uuid())
  name      String
  token     Int
  status    String   @default("WAITING")
  joinedAt  DateTime @default(now())

  sessionId String
  session   CustomSession @relation(fields: [sessionId], references: [id])
}

// --- ENUMS ---
enum Role {
  PATIENT
  PROVIDER
  ADMIN
  STAFF
}

enum VisitType {
  CHECKUP
  EMERGENCY
  REPORT
  FOLLOWUP
}

enum QueueStatus {
  WAITING
  SERVING
  COMPLETED
  MISSED
}
