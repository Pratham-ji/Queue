generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. THE USER (Doctors, Patients, Staff)
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed
  name      String
  phone     String?
  role      Role     @default(PROVIDER)
  createdAt DateTime @default(now())

  // Relations
  clinicId      String?
  clinic        Clinic?        @relation("ClinicToUser", fields: [clinicId], references: [id])

  doctorProfile DoctorProfile? // If user is a doctor
  appointments  Appointment[]  // If user booked appointments
}

// 2. THE CLINIC
model Clinic {
  id          String   @id @default(uuid())
  name        String   // e.g. "Max Hospital"
  address     String
  city        String   @default("Dehradun")
  image       String   // URL
  rating      Float    @default(4.5)
  description String?
  createdAt   DateTime @default(now())

  verified    Boolean  @default(false)

  // Relations
  users         User[]          @relation("ClinicToUser") // Staff/Admins of this clinic
  doctors       DoctorProfile[]
  patients      Patient[]       // Queue patients
}

// 3. THE PATIENT (Queue Items - Walk-ins)
model Patient {
  id            String      @id @default(uuid())
  token         Int
  name          String
  phone         String?
  type          VisitType   @default(CHECKUP)
  status        QueueStatus @default(WAITING)

  arrivalTime   DateTime    @default(now())
  servedTime    DateTime?
  completedTime DateTime?

  clinicId      String
  clinic        Clinic      @relation(fields: [clinicId], references: [id])
}

// 4. THE APPOINTMENT (Booked Online)
model Appointment {
  id          String   @id @default(uuid())
  date        String
  time        String
  status      String   @default("CONFIRMED")
  patientName String

  doctorId    String?
  doctor      DoctorProfile? @relation(fields: [doctorId], references: [id])

  userId      String?
  user        User?    @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
}

// 5. DOCTOR PROFILE (Details for the Doctor)
model DoctorProfile {
  id          String   @id @default(uuid())
  name        String
  specialty   String
  experience  Int
  image       String
  rating      Float    @default(4.8)
  price       Int
  about       String?

  clinicId    String
  clinic      Clinic   @relation(fields: [clinicId], references: [id])

  userId      String?  @unique
  user        User?    @relation(fields: [userId], references: [id])

  appointments Appointment[]
}

// 6. INSTANT QUEUE (USP Feature)
model CustomSession {
  id          String   @id @default(uuid())
  hostName    String
  title       String
  joinCode    String   @unique
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  participants SessionParticipant[]
}

model SessionParticipant {
  id        String   @id @default(uuid())
  name      String
  token     Int
  status    String   @default("WAITING")
  joinedAt  DateTime @default(now())

  sessionId String
  session   CustomSession @relation(fields: [sessionId], references: [id])
}

// --- ENUMS ---
enum Role {
  PATIENT
  PROVIDER
  ADMIN
  STAFF
}

enum VisitType {
  CHECKUP
  EMERGENCY
  REPORT
  FOLLOWUP
}

enum QueueStatus {
  WAITING
  SERVING
  COMPLETED
  MISSED
}
